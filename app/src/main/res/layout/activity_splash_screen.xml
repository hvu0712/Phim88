<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.SplashScreen"
    android:background="#1f1f1d">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/line1"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/line2"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/line1"
            android:background="#FF0000"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/line3"
            android:layout_width="20dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/line2"
            android:background="@color/white"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/line4"
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@+id/line3"
            android:layout_marginLeft="10dp"
            android:background="#FF0000"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/line5"
            android:layout_width="20dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/line4"
            android:background="#00FF33" />

        <View
            android:id="@+id/line6"
            android:layout_width="20dp"
            android:layout_height="250dp"
            android:layout_toRightOf="@+id/line5"
            android:layout_marginLeft="10dp"
            android:background="#FFFF00"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo"
                android:text="H"
                android:textColor="@color/white"
                android:textSize="150sp" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

           <TextView
               android:id="@+id/tagLine"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:fontFamily="@font/baloo"
               android:text="MOVIE88"
               android:textColor="@color/white"
               android:textSize="60sp" />
        </RelativeLayout>

    </LinearLayout>








</LinearLayout>