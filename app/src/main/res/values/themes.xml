<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Phim88" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.Phim88.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>
    
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="Theme.Phim88.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Phim88.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ThemeOverlay.SearchView" parent="">
        <!-- Text color -->
        <item name="android:editTextColor">@color/black</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/black</item>

    </style>

</resources>